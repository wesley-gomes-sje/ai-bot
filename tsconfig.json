{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "ESNext", 
    "moduleResolution": "node",                              
    "strict": true, 
    "typeRoots": ["./src/types", "./node_modules/@types"],                                  
    "esModuleInterop": true,                          
    "skipLibCheck": true,                             
    "forceConsistentCasingInFileNames": true,         
    "outDir": "./dist",                               
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true                              
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}