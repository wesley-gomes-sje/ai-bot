{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "commonjs",                             
    "strict": true, 
    "typeRoots": ["./src/types", "./node_modules/@types"],                                  
    "esModuleInterop": true,                          
    "skipLibCheck": true,                             
    "forceConsistentCasingInFileNames": true,         
    "outDir": "./dist",                               
    "rootDir": "./src"                                
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}